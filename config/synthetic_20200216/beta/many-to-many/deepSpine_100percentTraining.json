{
    "name": "SpinalCord",
    "device": {
        "type": "cuda"
    },
    "seed": 1213,
    "resume": {
        "type": false
    },
    "arch": {
        "embedding": {
            "type": "SensoryEncoder",
            "args": {
                "in_channels": 2,
                "out_channels": 128,
                "kernel_size": 3,
                "groups": 1,
                "activation": "relu",
                "use_norm": true
            }
        }, 
        "core": {
            "type": "SCC",
            "args": {
                "Ia_neurons": 32, 
                "II_neurons": 32, 
                "ex_neurons": 64, 
                "Iai_neurons": 64,
                "mn_neurons": 64,
                "Tmax": 100
            }
        },
        "readout": {
            "type": "ConvNet1d",
            "args": {
                "in_channels": 128,
                "out_channels": 2,
                "kernel_size": 1,
                "groups": 2,
                "activation": "none"
            }
        }
    },
    "data_loader": {
        "train_loader_args": {
            "batch_size": 256,
            "num_workers": 4,
            "shuffle": true,
            "dataset": {
                "type": "SyntheticDataset",
                "args":{
                    "file_path": "/media/data_cifs/projects/prj_deepspine/DARPA_RERUN/synthetic/20200216",
                    "input_type": "kinematics",
                    "output_type": "mn",
                    "is_ees": true,
                    "is_train": true,
                    "input_transform": [{
                        "type": "Normalize",
                        "args": {
                            "mean": [-0.2337, 0.0430],
                            "std": [0.2394, 0.1596],
                            "axis": 1
                        }
                    }],
                    "share_transform": [{
                        "type": "TemporalCrop",
                        "args": {
                            "start_idx": 600,
                            "window_size": 400,
                            "axis": 1
                        }
                    }]
                }
            }
        },
        "valid_loader_args": {
            "batch_size": 1014,
            "num_workers": 4,
            "shuffle": false,
            "dataset": {
                "type": "SyntheticDataset",
                "args":{
                    "file_path": "/media/data_cifs/projects/prj_deepspine/DARPA_RERUN/synthetic/20200216",
                    "input_type": "kinematics",
                    "output_type": "mn",
                    "is_ees": true,
                    "is_train": false,
                    "input_transform": [{
                        "type": "Normalize",
                        "args": {
                            "mean": [-0.2337, 0.0430],
                            "std": [0.2394, 0.1596],
                            "axis": 1
                        }
                    }],
                    "share_transform": [{
                        "type": "TemporalCrop",
                        "args": {
                            "start_idx": 600,
                            "window_size": 400,
                            "axis": 1
                        }
                    }]
                }
            }
        }
    },
    "optimizer": {
        "embedding_cfg": {
            "type": "Adam",
            "args": {
                "lr": 0.0005,
                "weight_decay": 0.0,
                "amsgrad": false
            }
        },
        "core_cfg": {
            "type": "Adam",
            "args": {
                "lr": 0.0005,
                "weight_decay": 0.0,
                "amsgrad": false
            }
        },
        "readout_cfg": {
            "type": "Adam",
            "args": {
                "lr": 0.0005,
                "weight_decay": 0.0,
                "amsgrad": false
            }
        }
    },
    "loss": "smooth_l1_loss",
    "trainer": {
        "type": "synthetic_beta_trainer",
        "args": {
            "max_iter": 100000,
            "max_norm": 1,

            "save_dir": "saved/20200216/beta/many-to-many/deppSpine_100",
            "save_period": 1000,

            "eval_period": 1000
        }
    }
} 
